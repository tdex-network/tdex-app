{
  "name": "tdex-app",
  "version": "1.0.1",
  "private": true,
  "description": "Mobile app for making trades on TDEX",
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "extends": [
      "@ionic/eslint-config/recommended",
      "plugin:cypress/recommended"
    ],
    "env": {
      "cypress/globals": true
    },
    "globals": {
      "module": true
    },
    "rules": {
      "@typescript-eslint/no-namespace": "off"
    }
  },
  "scripts": {
    "android": "ionic capacitor run android",
    "android:serve": "ionic capacitor run android -l --external",
    "build": "ionic build",
    "build:android": "ionic capacitor build android --no-open",
    "build:ios": "ionic capacitor build ios --no-open",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "eslint": "eslint \"./src/**/*.{ts,tsx}\" \"./test/**/*.{ts,tsx}\"",
    "fmt": "npm run eslint -- --fix && npm run prettier -- --write",
    "ios": "ionic capacitor run ios",
    "ios:serve": "ionic capacitor run ios -l --external",
    "lint": "npm run eslint && npm run prettier -- --check",
    "prettier": "prettier \"./src/**/*.{ts,tsx}\" \"./test/**/*.{ts,tsx}\"",
    "resources": "cordova-res ios --skip-config --copy && cordova-res android --skip-config --copy",
    "serve": "ionic serve",
    "serve:no-open": "ionic serve --no-open",
    "sync": "ionic cap sync",
    "tdex:clean": "bash scripts/tdexd-clean.sh",
    "tdex:run": "curl https://raw.githubusercontent.com/TDex-network/tdex-sdk/master/scripts/tdexd-run -o tdex-run && bash tdex-run && rm tdex-run",
    "tdex:run-mac": "curl https://raw.githubusercontent.com/TDex-network/tdex-sdk/master/scripts/tdexd-run-mac -o tdex-run-mac && bash tdex-run-mac && rm tdex-run-mac",
    "test": "BABEL_ENV=test npx jest"
  },
  "dependencies": {
    "@capacitor-community/barcode-scanner": "^2.0.1",
    "@capacitor-community/react-hooks": "^0.0.11",
    "@capacitor/android": "^3.1.2",
    "@capacitor/app": "^1.0.2",
    "@capacitor/cli": "^3.1.2",
    "@capacitor/core": "^3.1.2",
    "@capacitor/device": "^1.0.2",
    "@capacitor/ios": "^3.1.2",
    "@capacitor/keyboard": "^1.0.2",
    "@capacitor/splash-screen": "^1.1.0",
    "@capacitor/status-bar": "^1.0.2",
    "@capacitor/storage": "^1.0.3",
    "@cheprasov/react-qrcode": "^1.0.1",
    "@ionic-native/clipboard": "^5.35.0",
    "@ionic-native/core": "^5.35.0",
    "@ionic-native/screen-orientation": "^5.35.0",
    "@ionic/react": "^5.6.13",
    "@ionic/react-router": "^5.6.13",
    "@types/lodash.debounce": "^4.0.6",
    "axios": "^0.21.1",
    "bip32": "^2.0.6",
    "bitcoinjs-lib": "^5.2.0",
    "buffer-json": "^2.0.0",
    "capacitor-secure-storage-plugin": "^0.6.2",
    "classnames": "^2.3.1",
    "cordova-clipboard": "^1.3.0",
    "decimal.js": "^10.3.1",
    "es6-promise-plugin": "^4.2.2",
    "ionicons": "^5.5.3",
    "liquidjs-lib": "^5.1.15",
    "lodash.debounce": "^4.0.8",
    "lodash.merge": "^4.6.2",
    "moment": "^2.29.1",
    "pegin": "^0.1.5",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-redux": "^7.2.4",
    "react-router": "^5.2.0",
    "react-router-dom": "^5.2.0",
    "redux": "^4.1.1",
    "redux-saga": "^1.1.3",
    "reselect": "^4.0.0",
    "scrypt-js": "^3.0.1",
    "tdex-sdk": "^1.6.13"
  },
  "devDependencies": {
    "@babel/core": "^7.15.0",
    "@babel/preset-env": "^7.15.0",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.15.0",
    "@ionic/cli": "^6.16.3",
    "@ionic/eslint-config": "^0.3.0",
    "@ionic/prettier-config": "^1.0.1",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@types/buffer-json": "^2.0.0",
    "@types/jest": "^26.0.24",
    "@types/node": "^14.17.5",
    "@types/react": "^17.0.16",
    "@types/react-dom": "^17.0.9",
    "@types/react-redux": "^7.1.18",
    "@types/react-router": "^5.1.16",
    "@types/react-router-dom": "^5.1.8",
    "cordova-res": "^0.15.3",
    "cypress": "^8.2.0",
    "cypress-localstorage-commands": "^1.5.0",
    "eslint-plugin-cypress": "^2.11.3",
    "jest-canvas-mock": "^2.3.1",
    "prettier": "^2.3.2",
    "redux-devtools-extension": "^2.13.9",
    "sass": "^1.37.5",
    "tdex-react-scripts": "4.0.3-tdex",
    "ts-jest": "^27.0.4",
    "typescript": "^4.3.5"
  }
}
